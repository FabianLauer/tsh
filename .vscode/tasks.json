{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "./node_modules/.bin/tsc",
	"isShellCommand": true,
	"isBuildCommand": true,
	"showOutput": "always",
	"echoCommand": true,
	"promptOnClose": false,
	"problemMatcher": "$tsc",
	"tasks": [
		{
			"taskName": "build",
			"command": "./node_modules/.bin/tsc",
			"isBackground": false,
			"args": [
				"-p",
				"./"
			]
		}
	]
}